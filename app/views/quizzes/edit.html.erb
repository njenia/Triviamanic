<h1>Edit quiz <%= @quiz.id %></h1>

<div class="container">
  <ul class="thumbnails">
    <li class="span4">
      <h3>Your questions</h3>

      <div class="container">
        <ul class="thumbnails">
          <% current_user.questions.each do |question| %>
              <li class="span2">
                <%= render "questions/question_item", :question => question %>
                <% if not is_question_in_quiz(@quiz, question) %>
                    <%= button_to_function "Add to category →", 'addToCategory(' + question.id.to_s + ')',
                                           :class => 'btn btn-medium btn-primary' %>
                <% end %>
              </li>
          <% end %>
        </ul>
      </div>
    </li>
    <li class="span8">
      <h3>Categories</h3>
      <%= form_tag '/quizzes/' + @quiz.id.to_s + '/categories', :remote => true, :method => 'post' do %>
          <%= hidden_field_tag :quiz_id, @quiz.id %>
          <%= text_field_tag :new_category_name, nil, :placeholder => 'New category' %>
          <%= submit_tag 'Add category ↓', :class => 'btn btn-primary btn-medium' %>
      <% end %>
      <ul id="category_tabs" class="nav nav-tabs">
        <% @quiz.categories.each do |category| %>
            <li><a href="#category_<%= category.id.to_s %>" data-toggle="tab"><%= category.name %></a></li>
        <% end %>
      </ul>
      <div id="categories_tab_content" class="tab-content">
        <% @quiz.categories.each do |category| %>
            <div id="category_<%= category.id.to_s %>" class="tab-pane">
              <% category.quiz_questions.each do |quiz_question| %>
                  <div id="quiz_question_<%= quiz_question.id.to_s %>">
                      <%= render "questions/question_item", :question => quiz_question.question %>
                      <%= link_to_function "Remove", 'removeQuestionFromCategory(' + quiz_question.id.to_s + ')' %>
                  </div>
              <% end %>
            </div>
        <% end %>
      </div>
    </li>
  </ul>
</div>
